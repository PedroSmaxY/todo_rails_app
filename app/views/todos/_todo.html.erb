<div id="<%= dom_id todo %>" class="bg-white rounded-lg shadow p-6 mb-4 border">
  <p class="mb-2">
    <span class="font-semibold text-green-700">Name:</span>
    <span class="text-gray-800"><%= todo.name %></span>
  </p>

  <p class="mb-2">
    <span class="font-semibold text-green-700">Description:</span>
    <span class="text-gray-800"><%= todo.description %></span>
  </p>
  
  <p class="mb-2">
    <span class="font-semibold text-green-700">Completed:</span>
    <% if todo.completed %>
      <span class="text-green-600 font-bold">Yes ✅</span>
    <% else %>
      <span class="text-red-500 font-bold">No ❌</span>
    <% end %>
  </p>
  
  <p class="mb-2">
    <span class="font-semibold text-green-700">Priority:</span>
    <span class="text-gray-800"><%= todo.priority %></span>
  </p>
  
  <p>
    <span class="font-semibold text-green-700">Project:</span>
    <%= link_to todo.project.name, project_path(todo.project), class: "text-blue-600 hover:underline font-medium" %>
  </p>
</div>