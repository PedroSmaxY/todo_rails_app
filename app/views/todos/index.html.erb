<% content_for :title, "Todos" %>

<h1 class="text-3xl font-bold text-green-700 mb-8 text-center">Todos</h1>

<div id="todos" class="max-w-2xl mx-auto">
  <% @todos.each do |todo| %>
    <div class="mb-4">
      <%= render todo %>
      <div class="mt-2 flex gap-2">
        <%= link_to "Show this todo", todo, class: "bg-blue-500 hover:bg-blue-600 text-white font-semibold py-1 px-3 rounded shadow text-sm" %>
      </div>
    </div>
  <% end %>
</div>

<div class="mt-8 flex justify-center">
  <%= link_to "New todo", new_todo_path, class: "bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-6 rounded shadow text-lg" %>
</div>