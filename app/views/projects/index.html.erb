<h1 class="text-3xl font-bold text-green-700 mb-8 text-center">Projects</h1>

<div class="max-w-xl mx-auto">
  <ul class="space-y-2">
    <% @projects.each do |project| %>
      <li class="bg-white rounded border px-4 py-2 shadow-sm hover:bg-green-50 transition">
        <%= link_to project.name, project_path(project), class: "text-blue-700 font-semibold text-lg hover:underline" %>
      </li>
    <% end %>
  </ul>
  <div class="mt-6 text-center">
    <%= link_to "New Project", new_project_path, class: "bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-4 rounded shadow" %>
  </div>
</div>