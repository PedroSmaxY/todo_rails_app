<%= form_with model: project, class: "space-y-6" do |f| %>
  <% if project.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
      <h2 class="font-bold mb-2">
        <%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:
      </h2>
      <ul class="list-disc pl-5">
        <% project.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="flex flex-col gap-2">
    <%= f.label :name, class: "font-semibold text-gray-700" %>
    <%= f.text_field :name, class: "border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-green-400" %>
  </div>

  <div>
    <%= f.submit "Save Project", class: "bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-4 rounded shadow" %>
  </div>
<% end %>