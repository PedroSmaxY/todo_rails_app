<div class="flex flex-col items-center justify-center min-h-screen bg-gray-50">
  <h1 class="text-4xl font-bold mb-8 text-green-700">Create a Project</h1>

  <div class="bg-white rounded-lg shadow-md p-8 w-full max-w-lg">
    <%= render "form", project: @project %>

    <% if @project.errors.any? %>
      <div id="error_explanation" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mt-6">
        <h2 class="font-bold mb-2">
          <%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved
        </h2>
        <ul class="list-disc pl-5">
          <% @project.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
</div>